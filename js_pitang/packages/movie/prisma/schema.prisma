// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Region {
  SUL
  SUDESTE
  NORTE
  NORDESTE
  CENTROOESTE
}

model User {
  id Int @id @default(autoincrement())
  name      String
  country   String
  email     String?
  birthDate DateTime
  region    Region?
  phone     String?
}